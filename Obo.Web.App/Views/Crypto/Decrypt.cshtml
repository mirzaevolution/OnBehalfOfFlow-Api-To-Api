@model Obo.Web.App.Models.Crypto.DecryptViewModel

@{
    ViewData["Title"] = "AES-256 Decryption";
}

<h2 class="text-primary mb-3">AES-256 Decryption</h2>

@if (Model != null)
{
    if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-danger mb-2">
            <span class="fw-bold">@Model.Message</span>
        </div>
    }
    else
    {
        <div class="alert alert-success mb-2">
            <h3>@Model.PlainText</h3>
        </div>
    }

}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Decrypt">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="CipherText" class="control-label fw-bold"></label>
                <input asp-for="CipherText" class="form-control" placeholder="Enter ciphertext to decrypt" />
                <span asp-validation-for="CipherText" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label fw-bold"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter key/password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input hidden asp-for="PlainText" />
            <input hidden asp-for="Message" />
            <div class="form-group">
                <input type="submit" value="Decrypt!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
