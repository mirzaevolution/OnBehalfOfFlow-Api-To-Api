@model Obo.Web.App.Models.Crypto.EncryptViewModel

@{
    ViewData["Title"] = "AES-256 Encryption";
}

<h2 class="text-primary mb-3">AES-256 Encryption</h2>

@if (Model != null)
{
    if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-danger mb-2">
            <span class="fw-bold">@Model.Message</span>
        </div>
    }
    else
    {
        <div class="alert alert-success mb-2">
            <h3>@Model.CipherText</h3>
        </div>
    }

}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Encrypt">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="PlainText" class="control-label fw-bold"></label>
                <input asp-for="PlainText" class="form-control" placeholder="Enter plaintext to encrypt"/>
                <span asp-validation-for="PlainText" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label fw-bold"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter key/password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input hidden asp-for="CipherText" />
            <input hidden asp-for="Message" />
            <div class="form-group">
                <input type="submit" value="Encrypt!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
